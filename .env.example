############################################################
# TravelHub Example Environment File                        #
# Copy this file to .env and adjust values. NEVER commit     #
# real secrets (only this template).                        #
############################################################

# --- Core Django ---
SECRET_KEY=change-me-in-production
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# --- Database (leave POSTGRES_HOST empty to use SQLite) ---
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_DB=travelhub
POSTGRES_USER=travelhub
POSTGRES_PASSWORD=
DB_CONN_MAX_AGE=60

# --- Gemini / AI ---
GEMINI_API_KEY=

# --- JWT configuration ---
JWT_ACCESS_MINUTES=15
JWT_REFRESH_DAYS=7
JWT_ALGORITHM=HS256
# Optional separate signing key (falls back to SECRET_KEY if unset)
JWT_SIGNING_KEY=

# --- Throttling (DRF) ---
THROTTLE_USER_RATE=1000/day
THROTTLE_ANON_RATE=100/day
THROTTLE_LOGIN_RATE=5/min

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=False

# --- Security / HTTPS (only fully applied when DEBUG=False) ---
FORCE_HTTPS_DEV=False
SECURE_HSTS_SECONDS=31536000


# --- IMAP Ticket Fetching (for fetch_tickets command) ---
GMAIL_IMAP_HOST=imap.gmail.com
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_google_app_password
GMAIL_FROM_KIU=noreply@kiusys.com


